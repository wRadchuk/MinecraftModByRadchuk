# Указывает, что это корневой файл EditorConfig
# Поиск файлов .editorconfig прекращается, когда найден файл с root = true
root = true

# Применяется ко всем файлам
[*]
# Использовать пробелы для отступов вместо табуляции
indent_style = space
# Размер отступа - 4 пробела
indent_size = 4
# Использовать LF (Unix-стиль) для окончания строк
end_of_line = lf
# Кодировка файлов - UTF-8
charset = utf-8
# Удалять пробелы в конце строк
trim_trailing_whitespace = true
# Добавлять пустую строку в конце файла
insert_final_newline = true

# Специальные настройки для Markdown файлов
[*.md]
# Не удалять пробелы в конце строк в Markdown (они могут иметь значение)
trim_trailing_whitespace = false

# Специальные настройки для YAML файлов
[*.yml]
# Размер отступа - 2 пробела для YAML файлов
indent_size = 2
